                            <Setter Property="xct:ShadowEffect.Opacity" Value="1" />
                            <Setter Property="xct:ShadowEffect.Radius" Value="18" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

