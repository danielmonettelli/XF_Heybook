                            <Setter Property="xct:ShadowEffect.OffsetY" Value="3" />
                            <Setter Property="xct:ShadowEffect.Radius" Value="6" />
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState x:Name="Selected">
                        <VisualState.Setters>
                            <Setter Property="FontFamily" Value="Montserrat#600" />
                            <Setter Property="FontSize" Value="16" />
                            <Setter Property="TextColor" Value="{StaticResource col_ter}" />
                            <!--  Shadows  -->
